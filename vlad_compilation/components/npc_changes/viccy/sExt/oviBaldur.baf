IF
	InParty("Viconia")  // Viconia
	Global("ViconiaJoinedParty","GLOBAL",0)
THEN
	RESPONSE #100
		ReputationInc(-2)
		SetGlobal("ViconiaJoinedParty","GLOBAL",1)
END

IF
	!InParty("Viconia")  // Viconia
	!Dead("Viconia")  // Viconia
	Global("ViconiaJoinedParty","GLOBAL",1)
THEN
	RESPONSE #100
		ReputationInc(2)
		SetGlobal("ViconiaJoinedParty","GLOBAL",0)
END