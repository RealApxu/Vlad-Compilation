@1061601 = ~[DRIZZT 22] Dieser Kampf ist noch nicht vorbei! Wir sehen uns wieder!~ [DRIZZT22]
@1061606 = ~[EVIL PRIEST FEMALE 01] Ihr gefallt mir. Seid willkommen.~ [EPRIF01]
@1061607 = ~[EVIL PRIEST FEMALE 02] Warum stört Ihr meine Meditation?~ [EPRIF02]
@1061608 = ~[EVIL PRIEST FEMALE 03] Vielleicht haben die Götter eine Verwendung für Euch.~ [EPRIF03]
@1061609 = ~[EVIL PRIEST FEMALE 04] Dient den Göttern oder sterbt wie ein elender Wurm!~ [EPRIF04]
@1061610 = ~[EVIL PRIEST FEMALE 05] Euer Tod wird langsam und schmerzhaft sein!~ [EPRIF05]
@1061611 = ~[EVIL PRIEST FEMALE 06]~ [EPRIF06]
@1061612 = ~[EVIL PRIEST FEMALE 07]~ [EPRIF07]
@1061613 = ~[EVIL PRIEST FEMALE 08] Für Euch Narren werde ich doch nicht sterben!~ [EPRIF08]
@1061614 = ~[EVIL PRIEST MALE 01] Ich grüße Euch. Eure Macht ist beeindruckend.~ [EPRIM01]
@1061615 = ~[EVIL PRIEST MALE 02] Was wollt Ihr bei den wahren Gläubigen?~ [EPRIM02]
@1061616 = ~[EVIL PRIEST MALE 03] Verneigt Euch vor den Göttern und bettelt um Gnade!~ [EPRIM03]
@1061617 = ~[EVIL PRIEST MALE 04] Die Götter vergeben niemals!~ [EPRIM04]
@1061618 = ~[EVIL PRIEST MALE 05] Wenn ich mit Euch fertig bin, werdet Ihr um einen schnellen Tod winseln.~ [EPRIM05]
@1061619 = ~[EVIL PRIEST MALE 06]~ [EPRIM06]
@1061620 = ~[EVIL PRIEST MALE 07]~ [EPRIM07]
@1061621 = ~[EVIL PRIEST MALE 08] Gnade! Lasst Gnade walten!~ [EPRIM08]
@1061623 = ~[FANATIC FEMALE 01] Ich seid ein Nichts in den Augen meines Gottes!~ [FANATF01]
@1061624 = ~[FANATIC FEMALE 02] Betet und folgt uns, auf dass Ihr für würdig befunden werdet!~ [FANATF02]
@1061625 = ~[FANATIC FEMALE 03] Wir werden am letzten Tage gerettet werden!~ [FANATF03]
@1061626 = ~[FANATIC FEMALE 04] Ich bin eins mit dem Allmächtigen!~ [FANATF04]
@1061627 = ~[FANATIC FEMALE 05] Ihr seid nur Staub unter den Füßen des Wahren Gottes!~ [FANATF05]
@1061628 = ~[FANATIC FEMALE 06]~ [FANATF06]
