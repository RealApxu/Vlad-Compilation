@1061866 = ~[SOLDIER MALE 05] Mal sehen, wie Euch kalter Stahl gefällt!~ [SOLM05]
@1061867 = ~[SOLDIER MALE 06]~ [SOLM06]
@1061868 = ~[SOLDIER MALE 07]~ [SOLM07]
@1061869 = ~[SOLDIER MALE 08] Rückzug!~ [SOLM08]
@1061870 = ~[SOLDIER FEMALE 01] Sprecht schnell, Bürger! Ich habe nicht viel Zeit für sowas.~ [SOLF01]
@1061871 = ~[SOLDIER FEMALE 02] Einen guten Tag.~ [SOLF02]
@1061872 = ~[SOLDIER FEMALE 03] Ich diene mit meinem Schwert.~ [SOLF03]
@1061873 = ~[SOLDIER FEMALE 04] Stellt nichts Blödes an, dann kriegt Ihr auch keinen Ärger.~ [SOLF04]
@1061874 = ~[SOLDIER FEMALE 05] Kreuzt die Klinge mit mir und sterbt!~ [SOLF05]
@1061875 = ~[SOLDIER FEMALE 06]~ [SOLF06]
@1061876 = ~[SOLDIER FEMALE 07]~ [SOLF07]
@1061877 = ~[SOLDIER FEMALE 08] Zurückziehen... ich muss mich zurückziehen!~ [SOLF08]
@1061878 = ~[UDSOLA 28] Es ist noch nicht vorbei. Wir sehen uns wieder.~ [UDSOLA28]
@1061880 = ~[SARLES 20] Ahh! Nicht die Hände! Nicht die Hände!~ [SARLES20]
@1061881 = ~[SIMYAZ 28] Hier wird es nicht enden!~ [SIMYAZ28]
@1061882 = ~[SHADOW THIEF MALE 01] Schön, einen potenziellen Freund vom gleichen Schlage zu treffen.~ [STHMA01]
@1061883 = ~[SHADOW THIEF MALE 02] Sprecht, wenn Ihr mögt.~ [STHMA02]
@1061884 = ~[SHADOW THIEF MALE 03] Sucht Ihr etwas Bestimmtes?~ [STHMA03]
@1061885 = ~[SHADOW THIEF MALE 04] Sagt, was Ihr wollt, aber macht es kurz.~ [STHMA04]
@1061886 = ~[SHADOW THIEF MALE 05] Bettelt ein wenig, dann gönne ich Euch einen schnellen Tod.~ [STHMA05]
@1061887 = ~[SHADOW THIEF MALE 06] Niemand legt sich ungestraft mit den Schattendieben an.~ [STHMA06]
@1061888 = ~[SHADOW THIEF MALE 07]~ [STHMA07]
@1061889 = ~[SHADOW THIEF MALE 08]~ [STHMA08]
@1061890 = ~[SHADOW THIEF MALE 09] Ich muss... zurück in den Schatten!~ [STHMA09]
@1061891 = ~[SHADOW THIEF FEMALE 01] Ein wunderschöner Tag, was immer Ihr auch sucht.~ [STHFE01]
@1061892 = ~[SHADOW THIEF FEMALE 02] Hmm?~ [STHFE02]
@1061893 = ~[SHADOW THIEF FEMALE 03] Ja?~ [STHFE03]
@1061894 = ~[SHADOW THIEF FEMALE 04] Passt bloß auf, ich habe gute Augen.~ [STHFE04]
@1061895 = ~[SHADOW THIEF FEMALE 05] Schätze, es ist Zeit für Euch zu sterben!~ [STHFE05]
@1061896 = ~[SHADOW THIEF FEMALE 06] Gift oder kein Gift, Ihr werdet schnell sterben!~ [STHFE06]
@1061897 = ~[SHADOW THIEF FEMALE 07]~ [STHFE07]
@1061898 = ~[SHADOW THIEF FEMALE 08]~ [STHFE08]
@1061899 = ~[SHADOW THIEF FEMALE 09] Ihr könnt Euch nicht ungestraft mit der Gilde anlegen!~ [STHFE09]
@1061900 = ~[SASSAR 25] Zeit zu fliehen! Gebt den Kampf auf!~ [SASSAR25]
@1061901 = ~[RUFFIAN 01] Bleibt zurück, oder Ihr werdet es bereuen!~ [RUFFIA01]
@1061902 = ~[RUFFIAN 02] Für ein Kupferstück breche ich jemandem einen Arm oder ein Bein.~ [RUFFIA02]
@1061903 = ~[RUFFIAN 03] Ach, verzieht Euch bloß!~ [RUFFIA03]
@1061904 = ~[RUFFIAN 04] Ihr seid ganz schön hartnäckig.~ [RUFFIA04]
@1061905 = ~[RUFFIAN 05] Na gut, Ihr gegen mich! Na los, kommt schon!~ [RUFFIA05]
@1061906 = ~[RUFFIAN 06]~ [RUFFIA06]
@1061907 = ~[RUFFIAN 07]~ [RUFFIA07]
@1061908 = ~[RUFFIAN 08] Ich ergeb mich! Hört auf!~ [RUFFIA08]
@1061911 = ~[RENAL 25] Also dann... auf ein anderes Mal.~ [RENAL25]
@1061912 = ~[TANNER 20] Nein! Ich muss fliehen!~ [TANNER20]
